#define kp4n(n1, n2, n3, n4) &kp n1 &kp n2 &kp n3 &kp n4 &kp KP_ENTER
#define unicode_macro(name, n1, n2, n3, n4, more) \
	name: name { compatible = "zmk,behavior-macro"; \
		wait-ms = <0>; \
                tap-ms = <0>; \
		#binding-cells = <0>; \
		bindings = \
			<&kp LS(LC(U)) &kp LCTRL kp4n(n1, n2, n3, n4) more>; \
	};

#define U8_0(name, l1, l2, l3, l4, u1, u2, u3, u4) \
	unicode_macro(name ## _lower, l1, l2, l3, l4, &to 0) \
	unicode_macro(name ## _upper, u1, u2, u3, u4, &to 0) \
	name: name { \
		compatible = "zmk,behavior-mod-morph"; \
		#binding-cells = <0>; \
		mods = <(MOD_LSFT|MOD_RSFT)>; \
		bindings = <&name ## _lower>, <&name ## _upper>; \
	};

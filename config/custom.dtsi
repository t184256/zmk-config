ru_N6: ru_N6 {
	compatible = "zmk,behavior-mod-morph";
	#binding-cells = <0>;
	bindings = <&kp 6>, <&marked_ru LS(SEMI)>;
	mods = <(MOD_LSFT|MOD_RSFT)>;
